@model CityAccess.User
@{
    ViewBag.Title = "Index";
}

<div class="Header">
    <div class="Section-Title col-md-3">
        <h1>Register</h1>
    </div>
</div>


@using (Html.BeginForm("Create", "Register", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="Content">

        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.username)
                </dt>

                <dd>
                    @Html.EditorFor(model => model.username)
                </dd>
                <dt></dt>
                <dd>
                    @Html.ValidationMessageFor(model => model.username)
                </dd>


                <dt>
                    @Html.DisplayNameFor(model => model.password)
                </dt>

                <dd>
                    @Html.EditorFor(model => model.password)
                </dd>



                <dt></dt>
                <dd>
                    @Html.ValidationMessageFor(model => model.password)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.passwordConfirm)
                </dt>

                <dd>
                    @Html.EditorFor(model => model.passwordConfirm)
                </dd>
                <dt></dt>
                <dd>
                    @Html.ValidationMessageFor(model => model.passwordConfirm)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.fullName)
                </dt>

                <dd>
                    @Html.EditorFor(model => model.fullName)
                </dd>

                <dt></dt>
                <dd>
                    @Html.ValidationMessageFor(model => model.fullName)
                </dd>


                <dt>
                    @Html.DisplayNameFor(model => model.email)
                </dt>

                <dd>
                    @Html.EditorFor(model => model.email)
                </dd>

                <dt></dt>
                <dd>
                    @Html.ValidationMessageFor(model => model.email)
                </dd>



                <dt>
                    @Html.DisplayNameFor(model => model.phone)
                </dt>

                <dd>
                    @Html.EditorFor(model => model.phone)
                </dd>

                <dt></dt>
                <dd>
                    @Html.ValidationMessageFor(model => model.phone)
                </dd>
                @if (ViewBag.frominv == null)
                {
                    <dt>
                        @Html.LabelFor(model => model.partnerId, "Partner")
                    </dt>
                    <dd>
                        @Html.DropDownList("partnerId", null, htmlAttributes: new { @class = "form-control" })
                    </dd>

                    <dt></dt>
                    <dd>
                        @Html.ValidationMessageFor(model => model.partnerId, "", new { @class = "text-danger" })
                    </dd>
                }
                <dt></dt>
                <dd>
                    <label class="validation_error">@Html.DisplayFor(model => model.RegisterErrorMessage)</label>
                </dd>


            </dl>

            @if (ViewBag.frominv != null)
            {
                Model.emailConfirmed = true;
                Model.partnerId = ViewBag.partID;
                <div>
                    @Html.HiddenFor(model => model.emailConfirmed)
                    @Html.HiddenFor(model => model.partnerId)
                </div>
            }

            <hr />
            <input type="submit" name="name" value="Register" />
        </div>
    </div>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
