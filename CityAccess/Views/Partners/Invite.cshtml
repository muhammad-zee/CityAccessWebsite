@model CityAccess.Partner
@{
    ViewBag.Title = "Invite";
}
<div class="Header">
    <div class="Section-Title col-md-3">
        <h1>Invite partner</h1>
    </div>
</div>


<div class="Content">
    @using (Html.BeginForm("Invite", "Partners", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <hr />
        <div class="form-horizontal primaryDiv">
            <div class="no-padding form-group">
                @Html.LabelFor(model => model.email, "Partner e-mail", htmlAttributes: new { @class = "control-label col-md-3", style = "padding-top:0px;" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control ", maxlength = "50" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="no-padding form-group">
                @Html.LabelFor(model => model.description, "E-mail message", htmlAttributes: new { @class = "control-label col-md-3", style = "padding-top:0px;" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control ", maxlength = "500" } })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Invite" class="btn btn-default" /> |
                @Html.ActionLink("Cancel", "Index", "Agreements", null, htmlAttributes: new { @class = "btn btn-default" })
            </div>
        </div>
    }
</div>


<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<script>
    window.onload = function () {
        messg();
    };
    function messg() {
        if (@ViewBag.EmailSent != null) {
            alert("Invite successfully sent!");
        }
    }

</script>